<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style
        x:Key="TextBlockTooTip"
        TargetType="TextBlock">
        <Setter
            Property="FontSize"
            Value="14" />
        <Setter
            Property="Padding"
            Value="0" />
        <Setter
            Property="TextWrapping"
            Value="Wrap" />
    </Style>
</ResourceDictionary>
